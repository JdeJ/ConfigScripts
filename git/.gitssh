#! /bin/bash

# Create github ssh keys
# Run without downloading:
# bash <(curl -s https://raw.githubusercontent.com/JdeJ/dotfiles/master/.gitsetup)

mkdir -p ~/.ssh
touch ~/.ssh/config

echo -e "\n\n==> Generating an RSA token for JdeJ\n"
ssh-keygen -t rsa -b 4096 -C "jorgedjuana@gmail.com" -f ~/.ssh/JdeJ_rsa
eval "$(ssh-agent -s)"
echo "Host *\n AddKeysToAgent yes\n UseKeychain yes\n IdentityFile ~/.ssh/JdeJ_rsa" | tee ~/.ssh/config
ssh-add -K ~/.ssh/id_rsa
echo "run 'pbcopy < ~/.ssh/JdeJ.pub' and paste that into GitHub"

echo -e "\n\n==> Generating an RSA token for Nice\n"
ssh-keygen -t rsa -b 4096 -f ~/.ssh/nice_rsa
eval "$(ssh-agent -s)"
echo "Host *\n AddKeysToAgent yes\n UseKeychain yes\n IdentityFile ~/.ssh/nice_rsa" | tee ~/.ssh/config
ssh-add -K ~/.ssh/id_rsa
echo "run 'pbcopy < ~/.ssh/nice.pub' and paste that into GitHub"