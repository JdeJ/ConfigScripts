# Zsh aliases
alias zshconfig="nano ~/.zshrc"
alias ohmyzsh="nano ~/.oh-my-zsh"

# VScode aliases
alias nice="code --extensions-dir ~/code/code_profiles/nice/exts --user-data-dir ~/code_profiles/nice/data"
alias code="code --extensions-dir ~/code/code_profiles/jdej/exts --user-data-dir ~/code_profiles/jdej/data"

# Git aliases
alias gi='git init'
alias gcl='git clone'
alias gc='git fetch --all && git checkout'
alias gs='git fetch --all && git status'
alias gcb='git checkout -b'
alias gf='git fetch --all'
alias ga='git add -A'
alias ga.='git add .'
alias gcm='git commit -m'
alias gca='git commit --amend --no-edit'
alias gp='git push'
alias gpo='git push origin'
alias gpu='git push -u origin'
alias gpl='git pull'
alias gplo='git pull origin'
alias grs='git reset --soft HEAD'
alias grh='git reset --hard HEAD'
alias gl='git log'
alias gd='git diff'
alias gb='git branch -a'
alias gbr='git branch -m'
alias gra='git remote add'
alias grd='git remote rm'

# leverage an alias from the ~/.gitconfig
alias gh='git hist'
alias glg='git lg'
alias glg1='git lg1'
alias glg2='git lg2'
alias glg3='git lg3'

# Other aliases
alias cl='clear'

# Change directory to the current Finder directory
cdf() {
    target=`osascript -e 'tell application "Finder" to if (count of Finder windows) > 0 then get POSIX path of (target of front Finder window as text)'`
    if [ "$target" != "" ]; then
        cd "$target"; pwd
    else
        echo 'No Finder window found' >&2
    fi
}
